{
    "author": "Valerio Bartolini",
    "name": "photo-mosaic",
    "description": "Convert an image in svg tiles retrieved from the server using a dedicated worker",
    "version": "1.0.0",
    "scripts": {
        "build": "webpack --config webpack.config.js",
        "server": "node server.js",
        "dev": "concurrently \"yarn server\" \"yarn bundle\"",
        "lint": "eslint . --cache",
        "typecheck": "flow check",
        "prettier": "prettier --check js/**/*.js",
        "test": "yarn typecheck && yarn lint && yarn prettier"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/preset-env": "^7.3.1",
        "@babel/preset-flow": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.5",
        "css-loader": "^2.1.0",
        "eslint": "^5.12.1",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^4.0.0",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-flowtype": "^3.2.1",
        "eslint-plugin-import": "^2.15.0",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-security": "^1.4.0",
        "flow-bin": "^0.91.0",
        "prettier": "1.16.1",
        "style-loader": "^0.23.1",
        "uglifyjs-webpack-plugin": "^2.1.1",
        "webpack": "^4.29.0",
        "webpack-cli": "^3.2.1"
    }
